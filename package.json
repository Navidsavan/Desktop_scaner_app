{
    "name": "LD-Desktop",
    "version": "1.0.0",
    "description": "Lottery Ticket Update Using LD Desktop",
    "main": "electron/main.js",
    "scripts": {
        "dev": "nodemon --watch main.js --watch utilities/ --watch preload/ --watch electron/ --watch src/ --ext js,jsx,html,css --exec electron .",
        "start": "electron .",
        "watch": "nodemon --exec electron .",
        "build": "npm run rebuild && electron-builder",
        "rebuild": "electron-rebuild -f -w sqlite3",
        "install": "electron-rebuild",
        "postinstall": "electron-builder install-app-deps",
        "build-css": "npx postcss electron/render/scss/style.scss -o electron/render/css/app.css"
    },
    "repository": "https://github.com/Rizzim/LotteryPOSWacher",
    "publish": {
        "provider": "github",
        "releaseType": "release"
    },
    "build": {
        "appId": "app.ld.pos.watcher",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "images/icon/icon@8x.ico",
            "publisherName": "LD-Desktop",
            "certificateFile": "certificate/certificate.pfx",
            "certificatePassword": "12110"
        },
        "nsis": {
            "oneClick": true,
            "allowElevation": true,
            "perMachine": false,
            "runAfterFinish": true,
            "allowToChangeInstallationDirectory": false,
            "installerIcon": "images/icon/icon@8x.ico",
            "uninstallerIcon": "images/icon/icon@8x.ico",
            "uninstallDisplayName": "LD-Desktop",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "extraResources": [
            "ldwatcher.exe.manifest"
        ]
    },
    "author": "11th Agency",
    "license": "ISC",
    "devDependencies": {
        "@electron/rebuild": "^3.3.0",
        "electron": "^23.3.13",
        "electron-builder": "^23.6.0",
        "postcss-cli": "^10.1.0"
    },
    "dependencies": {
        "auto-launch": "^5.0.6",
        "autoprefixer": "^10.4.14",
        "axios": "^1.3.4",
        "chokidar": "^3.5.3",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.1.4",
        "electron-window-state": "^5.0.3",
        "esm": "^3.2.25",
        "node-cron": "^3.0.2",
        "node-global-key-listener": "^0.3.0",
        "nodemon": "^3.0.2",
        "postcss": "^8.4.23",
        "pusher-js": "^8.0.2",
        "sequelize": "^6.30.0",
        "sqlite3": "^5.1.7",
        "tailwindcss": "^3.3.2",
        "xml2js": "^0.4.23"
    }
}
